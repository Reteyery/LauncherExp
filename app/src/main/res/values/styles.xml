<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--edittext在输入法横屏显示使用的style-->
    <style name="editTextStyle" parent="@android:style/Widget.Holo.EditText">
        <item name="android:imeOptions">flagNoExtractUi|flagNoFullscreen</item>
    </style>
    <!--隐藏状态栏-->
    <style name="AppTheme.NoBar">
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="themeactivity" parent="android:Theme">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">false</item>
    </style>

    <style name="theme_windowfullscreen_true" parent="@style/themeactivity">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowIsTranslucent">false</item>
    </style>

</resources>
